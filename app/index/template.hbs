<div class="hero">
    <h2 class="hero-title">Get Food Delivered Fast</h2>
</div>


  <div class="container">

    <div class="grid">
    {{!-- <div class="grid__item"> --}}
      <div class="grid__item grid__item--left">
        <h3 class="title">Menu</h3>
        {{#each model as |value|}}
        <div class="card">
          <h2 class="card__header">{{ value.name }}</h2>
          {{#each value.menuItems as |item|}}
        <div class="card__content">
          <p class="card__name">{{ item.name }}</p>
          <p class="card__description">{{ item.description }}</p>
          <p class="card__price">{{ item.price }}</p>
          <button class="order-btn">Order</button>
        </div>

          {{/each}}
      </div>
      {{/each}}
    </div>

    <div class="grid__item grid__item--right">
      <h3 class="title">Your Order</h3>
      <div class="card">
        <h2 class="card__header">Cart</h2>
        <div class="card__content">
          <h4>Add Something</h4>
          <p>No items have been added to the cart!</p>
        </div>
        <div class="card__content--sum">
          <p class="total">Total</p>
          <p class="amount">$0.00</p>
        </div>
        <button type="button" class="order-btn">Submit Order</button>
      </div>
    </div>
  {{!-- </div> --}}
  </div>
</div>
